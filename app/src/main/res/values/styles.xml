<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
    </style>

    <style name="titleDetail">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:font" tools:targetApi="o">@font/roboto_regular</item>
    </style>

    <style name="text">
        <item name="android:textSize">14sp</item>
        <item name="android:font" tools:targetApi="o">@font/roboto_regular</item>

    </style>

    <style name="textDetail">
        <item name="android:textSize">16sp</item>
        <item name="android:font" tools:targetApi="o">@font/roboto_regular</item>
    </style>

    <style name="textDetailWhite">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:font" tools:targetApi="o">@font/roboto_regular</item>
    </style>

    <style name="textDetailBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:font" tools:targetApi="o">@font/roboto_regular</item>
    </style>

</resources>
